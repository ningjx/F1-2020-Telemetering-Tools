<Window x:Class="F1Tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1Tools"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="510">
    <Grid Background="Black" Width="500" Height="500" Margin="0,0,0,0">
        <local:F1Instrument x:Name="f1"></local:F1Instrument>
        <StackPanel x:Name="sp_ip" Width="500" Height="120" Opacity="0.95" Orientation="Vertical" Background="White">
            <Label x:Name="lb_ip" FontFamily="SourceHanSansCN-Normal" Content="当前IP：0.0.0.0" Foreground="Black" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label x:Name="lb_port" FontFamily="SourceHanSansCN-Normal" Content="端口：666" Foreground="Black" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</Window>
